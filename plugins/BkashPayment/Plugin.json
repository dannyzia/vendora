{
    "name": "bkash-payment",
    "version": "1.0.0",
    "displayName": "bKash Payment Gateway",
    "description": "Accept payments via bKash",
    "author": "Vendora Team",
    "requires": {
        "core": ">=1.0.0",
        "php": ">=8.1"
    },
    "provides": ["payment-method"],
    "hooks": [
        "checkout.payment_methods",
        "order.payment_process"
    ],
    "settings": true,
    "price": {
        "type": "subscription",
        "amount": 500,
        "currency": "BDT",
        "period": "monthly"
    }
}
